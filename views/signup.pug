doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Gigatech
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap' rel='stylesheet')
  link(rel="stylesheet" href="/stylesheets/Login.css")
main
  .right-side
    a
        form(action="/confirm" method="post")
            h2 Login
            div(class="input-field")
                p Name:
                input(type="text", name="name", id="name", placeholder="Enter Name" required)
            div(class="input-field")
                p Surname:
                input(type="text", name="surname", id="surname", placeholder="Enter Surname" required)
            div(class="input-field")
                p mail:
                input(type="text", name="mail", id="mail", placeholder="someone@where.local" required)
            div(class="input-field")
                p Username:
                input(type="text", name="username", id="username", placeholder="Enter Username" required)
            div(class="input-field")
                p Password:
                input(type="password", name="password", id="password", placeholder="Enter Password" required)
            div(class="input-field")
                p Address:
                input(type="text", name="address", id="address", placeholder="Street nr" required)
            input(type="submit", value="create")